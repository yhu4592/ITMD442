extends layout

block content
  h1= title
  hr
  if msg 
    p(class='redText')= msg
  form(method='POST', action=`/contacts/${info.contactID}/edit`)
    label(for='firstName') First Name
    input(type='text', name='firstName', value=info.firstName)
    label(for='lastName') Last Name
    input(type='text', name='lastName', value=info.lastName)
    label(for='email') Email
    input(type='text', name='email', value=info.email)
    label(for='notes') Notes
    input(type='text', name='notes', value=info.notes)
    button(type='submit') Update Contact
    a(href='/contacts') Cancel